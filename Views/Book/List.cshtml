@model List<BookViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="AddBook" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add new book
			</a>
		</div>
	</div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Pages
                </th>
                <th>
                    Category
                </th>
                <th>
                    Author
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.Id
                    </td>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="10%">
                        @obj.Pages
                    </td>
                    <td width="20%">
                        @obj.Category
                    </td>
                    <td width="30%">
                        @obj.Author
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" 
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>